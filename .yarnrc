# Yarn configuration for QTE Series: Boxing

# Ensure consistent package installation and behavior

# Use exact versions for better reproducibility

save-exact true

# Enable Yarn Berry features (if using Yarn 2+)

node-linker node-modules

# Set registry to npm (default)

registry "https://registry.npmjs.org/"

# Enable network timeout for better reliability

network-timeout 300000

# Enable progress bar

progress-bar true
